@model ML3.Models.Admin

@{
    ViewData["Title"] = "Sign Up - Admin";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header text-center bg-pink text-white">
                    <h3 class="mb-0">Admin Sign-Up</h3>
                </div>
                <div class="card-body">
                    <form asp-action="CreateAdmin">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" style="display:none;"></div>

                        <div class="form-group mb-4">
                            <label asp-for="FirstName" class="form-label">First Name</label>
                            <input asp-for="FirstName" class="form-control" placeholder="Enter your first name" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="LastName" class="form-label">Last Name</label>
                            <input asp-for="LastName" class="form-control" placeholder="Enter your last name" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Gender" class="form-label">Gender</label>
                            <select asp-for="Gender" class="form-control">
                                <option value="" disabled selected>Select your gender</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                                <option value="Other">Other</option>
                            </select>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Enter a secure password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-white btn-lg">Create Account</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Index" class="text-pink">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<!-- Add CSS for customization -->
<style>
    .bg-pink {
        background-color: #FFC0CB; /* Soft pink background */
    }

    .text-pink {
        color: #FFC0CB; /* Pink text color */
    }

    .btn-white {
        color: #FFC0CB; /* Pink text color */
        background-color: #FFFFFF; /* White button background */
        border: 1px solid #FFC0CB; /* Pink border */
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .btn-white:hover {
            transform: scale(1.1); /* Expand on hover */
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2); /* Add shadow */
        }

    .card-header.bg-pink {
        background-color: #FFC0CB; /* Soft pink header */
    }

    .card-footer .text-pink {
        color: #FFC0CB; /* Pink text color for the footer link */
    }

    .btn:hover {
        text-decoration: none;
    }
</style>
