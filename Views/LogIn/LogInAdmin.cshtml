@{
    ViewData["Title"] = "Admin Login";
}

<div class="container mt-4">
    <h1 class="display-4 text-pink">Admin Login</h1>
    <p class="lead text-muted">Access your admin account by providing your credentials below.</p>
    <hr />

    <form asp-action="DetailsAdmin" method="post" class="mt-4">
        <div class="form-group">
            <label for="AdminId" class="control-label text-dark">Admin ID</label>
            <input type="number" name="id" id="AdminId" class="form-control" placeholder="Enter your Admin ID" required />
        </div>
        <div class="form-group">
            <label for="Password" class="control-label text-dark">Password</label>
            <input type="password" name="password" id="Password" class="form-control" placeholder="Enter your password" required />
        </div>

        <div class="form-group mt-3">
            <input type="submit" value="Login" class="btn btn-pink btn-lg" />
        </div>

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger mt-3">
                <strong>Error:</strong> @ViewBag.ErrorMessage
            </div>
        }
    </form>
</div>

<!-- Custom CSS for Buttons -->
<style>
    /* Primary Button - Light Pink Background for Login */
    .btn-pink {
        background-color: #FFC0CB; /* Light pink */
        border: 1px solid #FFC0CB;
        color: white;
    }

        .btn-pink:hover {
            background-color: #FFB6C1; /* Lighter pink on hover */
        }

    /* Text Color for Labels */
    .text-dark {
        color: #333; /* Dark text for labels */
    }

    /* Header - Pink Color */
    .text-pink {
        color: #FFC0CB; /* Light pink for the header */
    }
</style>
