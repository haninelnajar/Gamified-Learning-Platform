@model ML3.Models.Learner

@{
    ViewData["Title"] = "Delete Learner";
}

<div class="container mt-4">
    <h1 class="display-4 text-pink">Delete Learner</h1>
    <h3 class="text-lightgrey">Are you sure you want to delete this?</h3>
    <hr />

    <div class="bg-light shadow-sm p-4 rounded">
        <h4 class="text-dark">Learner Details</h4>
        <dl class="row mt-3">
            <dt class="col-sm-2 text-dark">
                @Html.DisplayNameFor(model => model.FirstName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FirstName)
            </dd>

            <dt class="col-sm-2 text-dark">
                @Html.DisplayNameFor(model => model.LastName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LastName)
            </dd>

            <dt class="col-sm-2 text-dark">
                @Html.DisplayNameFor(model => model.Gender)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Gender)
            </dd>

            <dt class="col-sm-2 text-dark">
                @Html.DisplayNameFor(model => model.BirthDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BirthDate)
            </dd>

            <dt class="col-sm-2 text-dark">
                @Html.DisplayNameFor(model => model.Country)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Country)
            </dd>

            <dt class="col-sm-2 text-dark">
                @Html.DisplayNameFor(model => model.CulturalBackground)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CulturalBackground)
            </dd>

            <dt class="col-sm-2 text-dark">
                @Html.DisplayNameFor(model => model.Password)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Password)
            </dd>
        </dl>

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="LearnerId" />
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger btn-lg" />
                <a asp-action="Index" class="btn btn-lightgrey btn-lg ml-3">Back to List</a>
            </div>
        </form>
    </div>
</div>

<!-- Custom CSS for Buttons -->
<style>
    /* Primary Button - Pink Background */
    .btn-pink {
        background-color: #FFC0CB; /* Light pink */
        border: 1px solid #FFC0CB;
        color: white;
    }

        .btn-pink:hover {
            background-color: #FFB6C1; /* Lighter pink on hover */
        }

    /* Light Grey Button */
    .btn-lightgrey {
        background-color: #D3D3D3; /* Light grey */
        border: 1px solid #D3D3D3;
        color: black;
    }

        .btn-lightgrey:hover {
            background-color: #A9A9A9; /* Darker grey on hover */
        }

    /* Labels */
    .text-dark {
        color: #333; /* Dark text for labels */
    }

    /* Header - Pink Color */
    .text-pink {
        color: #FFC0CB; /* Light pink for the header */
    }

    /* Text Color for Warning */
    .text-lightgrey {
        color: #D3D3D3; /* Light grey for warning text */
    }
</style>
