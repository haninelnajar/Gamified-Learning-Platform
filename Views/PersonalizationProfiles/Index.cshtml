@model IEnumerable<ML3.Models.PersonalizationProfile>

@{
    ViewData["Title"] = "Personalization Profiles";
}

<div class="container mt-4">
    <h1 class="display-4">Personalization Profiles</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Create New Profile</a>
    </p>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.PreferredContentType)</th>
                <th>@Html.DisplayNameFor(model => model.EmotionalState)</th>
                <th>@Html.DisplayNameFor(model => model.PersonalityType)</th>
                <th>@Html.DisplayNameFor(model => model.Learner)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.PreferredContentType)</td>
                    <td>@Html.DisplayFor(modelItem => item.EmotionalState)</td>
                    <td>@Html.DisplayFor(modelItem => item.PersonalityType)</td>
                    <td>@Html.DisplayFor(modelItem => item.LearnerId)</td>
                    <td>
                        <a asp-action="Details" asp-route-learnerId="@item.LearnerId" asp-route-profileId="@item.ProfileId" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Edit" asp-route-learnerId="@item.LearnerId" asp-route-profileId="@item.ProfileId" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-learnerId="@item.LearnerId" asp-route-profileId="@item.ProfileId" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
