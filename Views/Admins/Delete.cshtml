@model ML3.Models.Admin

@{
    ViewData["Title"] = "Delete Admin";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-danger text-white text-center">
                    <h3>Delete Admin</h3>
                </div>
                <div class="card-body">
                    <h5 class="text-center text-danger mb-4">Are you sure you want to delete this admin?</h5>
                    <dl class="row">
                        <dt class="col-sm-4 font-weight-bold">First Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.FirstName)</dd>

                        <dt class="col-sm-4 font-weight-bold">Last Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.LastName)</dd>

                        <dt class="col-sm-4 font-weight-bold">Gender</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Gender)</dd>

                        <dt class="col-sm-4 font-weight-bold">Password</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Password)</dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="AdminId" />
                        <div class="text-center">
                            <button type="submit" class="btn btn-danger btn-lg">Confirm Delete</button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg ml-2">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
