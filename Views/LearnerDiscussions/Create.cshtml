@model ML3.Models.LearnerDiscussion

@{
    ViewData["Title"] = "Create Learner Discussion";
}

<div class="container mt-4">
    <h1 class="display-4 text-pink">Create Learner Discussion</h1>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="form-group">
                    <label asp-for="ForumId" class="control-label text-dark">Forum</label>
                    <select asp-for="ForumId" class="form-control">
                        @* Populate with forum items *@
                        @Html.Raw(ViewBag.ForumId)
                    </select>
                </div>

                <div class="form-group">
                    <label asp-for="LearnerId" class="control-label text-dark">Learner</label>
                    <select asp-for="LearnerId" class="form-control">
                        @* Populate with learner items *@
                        @Html.Raw(ViewBag.LearnerId)
                    </select>
                </div>

                <div class="form-group">
                    <label asp-for="Post" class="control-label text-dark">Discussion Post</label>
                    <textarea asp-for="Post" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Post" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-lightblue" />
                    <a asp-action="Index" class="btn btn-lightgrey">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<!-- Custom CSS for Buttons -->
<style>
    /* Primary Button - Light Blue Background */
    .btn-lightblue {
        background-color: #ADD8E6; /* Light blue */
        border: 1px solid #ADD8E6;
        color: white;
    }

        .btn-lightblue:hover {
            background-color: #87CEEB; /* Lighter blue on hover */
        }

    /* Secondary Button - Light Grey Background */
    .btn-lightgrey {
        background-color: #D3D3D3; /* Light grey */
        border: 1px solid #D3D3D3;
        color: black;
    }

        .btn-lightgrey:hover {
            background-color: #A9A9A9; /* Darker grey on hover */
        }

    /* Text Color for Labels */
    .text-dark {
        color: #333; /* Dark text for labels */
    }

    /* Header - Pink Color */
    .text-pink {
        color: #FFC0CB; /* Light pink for the header */
    }
</style>
