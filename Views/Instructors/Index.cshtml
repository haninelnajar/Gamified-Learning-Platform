@model IEnumerable<ML3.Models.Instructor>

@{
    ViewData["Title"] = "Instructors";
}

<div class="container mt-4">
    <h1 class="display-4">Instructors</h1>
    <hr />

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">Create New Instructor</a>
    </div>

    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LatestQualification)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ExpertiseArea)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Password)
                </th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LatestQualification)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExpertiseArea)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Password)
                    </td>
                    <td class="text-center">
                        <a asp-action="Details" asp-route-id="@item.InstructorId" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Edit" asp-route-id="@item.InstructorId" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.InstructorId" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
