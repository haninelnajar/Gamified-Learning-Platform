@model ML3.Models.LearningGoal

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-pink">Edit</h1>

<h4 class="text-dark">Learning Goal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Status" class="control-label text-dark"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Deadline" class="control-label text-dark"></label>
                <input asp-for="Deadline" class="form-control" />
                <span asp-validation-for="Deadline" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label text-dark"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-lightblue" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-lightgrey">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<!-- Custom CSS for Buttons -->
<style>
    /* Primary Button - Light Blue Background */
    .btn-lightblue {
        background-color: #ADD8E6; /* Light blue */
        border: 1px solid #ADD8E6;
        color: white;
    }
    .btn-lightblue:hover {
        background-color: #87CEEB; /* Lighter blue on hover */
    }

    /* Light Grey Button */
    .btn-lightgrey {
        background-color: #D3D3D3; /* Light grey */
        border: 1px solid #D3D3D3;
        color: black;
    }
    .btn-lightgrey:hover {
        background-color: #A9A9A9; /* Darker grey on hover */
    }

    /* Text Color for Labels */
    .text-dark {
        color: #333; /* Dark text for labels */
    }

    /* Header - Pink Color */
    .text-pink {
        color: #FFC0CB; /* Light pink for the header */
    }
</style>
