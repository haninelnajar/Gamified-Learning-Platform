@model ML3.Models.InstructorDiscussion

@{
    ViewData["Title"] = "Create Instructor Discussion";
}

<div class="container mt-4">
    <h1 class="display-4 text-light-pink">Create Instructor Discussion</h1>
    <hr class="border-light-pink" />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create" class="shadow-lg p-4 bg-white rounded">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Forum Selection -->
                <div class="form-group">
                    <label asp-for="ForumId" class="control-label text-light-pink">Forum</label>
                    <select asp-for="ForumId" class="form-control border-light-pink" asp-items="ViewBag.ForumId"></select>
                </div>

                <!-- Instructor Selection -->
                <div class="form-group">
                    <label asp-for="InstructorId" class="control-label text-light-pink">Instructor</label>
                    <select asp-for="InstructorId" class="form-control border-light-pink" asp-items="ViewBag.InstructorId"></select>
                </div>

                <!-- Post Textarea -->
                <div class="form-group">
                    <label asp-for="Post" class="control-label text-light-pink">Post</label>
                    <textarea asp-for="Post" class="form-control border-light-pink" rows="4" placeholder="Enter your post"></textarea>
                    <span asp-validation-for="Post" class="text-danger"></span>
                </div>

                <!-- Submit and Cancel Buttons -->
                <div class="form-group mt-3">
                    <input type="submit" value="Create" class="btn btn-light-pink btn-lg" />
                    <a asp-action="Index" class="btn btn-light-grey btn-lg ml-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .text-light-pink {
        color: #FFC0CB; /* Light pink text */
    }

    .border-light-pink {
        border-color: #FFC0CB !important; /* Light pink border */
    }

    .bg-white {
        background-color: #FFFFFF; /* White background */
    }

    .btn-light-pink {
        background-color: #FFC0CB; /* Light pink button */
        color: #FFFFFF; /* White text */
        border: none;
        padding: 0.5rem 1.5rem;
        font-size: 1.25rem;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    .btn-light-pink:hover {
        background-color: #FFB6C1; /* Slightly darker pink on hover */
    }

    .btn-light-grey {
        background-color: #D3D3D3; /* Light grey button */
        color: #333; /* Dark text */
        padding: 0.5rem 1.5rem;
        font-size: 1.25rem;
        border: none;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    .btn-light-grey:hover {
        background-color: #A9A9A9; /* Darker grey on hover */
        color: #FFFFFF; /* White text on hover */
    }

    .form-control {
        border-radius: 8px;
        padding: 0.75rem;
    }

    .rounded {
        border-radius: 8px;
    }

    .p-3 {
        padding: 1.5rem;
    }

    .control-label {
        font-weight: bold;
    }
</style>
